{
  "manifest_version": 3,
  "name": "ReadScore",
  "version": "1.0.0",
  "description": "Analyze the readability of web pages with transparent, explainable metrics.",
  "author": "HeyKaan.dev",
  "homepage_url": "https://heykaan.dev",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "ReadScore - Readability Analyzer"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ]
}